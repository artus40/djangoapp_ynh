{
    "id": "my_djangoapp",
    "name": "DjangoApp",
    "packaging_format": 1,
    "description": {
        "en": "Custom Django application template",
        "fr": "Modèle d'application Django personnalisée"
    },
    "license": "free",
    "maintainer": {
        "name": "Arthur Gerbaud",
        "email": "artus@landoftheunicorn.hd.free.fr"
    },
    "multi_instance": true,
    "requirements": {
        "yunohost": ">= 2.4.0"
    },
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for your Webapp",
                    "fr": "Choisissez un domaine pour votre Webapp"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for your Webapp",
                    "fr": "Choisissez un chemin pour votre Webapp"
                },
                "example": "/site",
                "default": "/site"
            },
 	    {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose the admin user for your Webapp",
                    "fr": "Choisissez un administrateur pour votre application"
                }
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Set the password for the django admin",
                    "fr": "Définissez le mot de passe pour l'administrateur"
                },
                "example": "myreallystrengthpassword"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public website?",
                    "fr": "Est-ce un site public ?"
                },
                "default": true
            }
       ]
    }
}
